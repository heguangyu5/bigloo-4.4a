#*    -------------------------------------------------------------    */
#*    The `Hello World' Makefile                                       */
#*=====================================================================*/

#*---------------------------------------------------------------------*/
#*    The flags                                                        */
#*---------------------------------------------------------------------*/
BIGLOO          = bigloo
BFLAGS          = -O -v -cg -unsafe

#*---------------------------------------------------------------------*/
#*    hello                                                            */
#*---------------------------------------------------------------------*/
hello: xhw1.o
	@ $(BIGLOO) $(BFLAGS) xhw1.o -o hello -lX11

xhw1.o: xhw1.scm
	@ $(BIGLOO) -c $(BFLAGS) xhw1.scm

#*---------------------------------------------------------------------*/
#*    Clean                                                            */
#*---------------------------------------------------------------------*/
clean: 
	@- $(RM) -f *.o *.c hello *~ *.BAK *.ast trace
