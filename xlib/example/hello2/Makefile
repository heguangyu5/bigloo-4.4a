#*    Last change :  Fri Dec  5 10:56:35 2003 (serrano)                */
#*    -------------------------------------------------------------    */
#*    The `Hello World' Makefile                                       */
#*=====================================================================*/

#*---------------------------------------------------------------------*/
#*    The flags                                                        */
#*---------------------------------------------------------------------*/
BIGLOO          = bigloo
BFLAGS          = -O -v -cg -unsafe

#*---------------------------------------------------------------------*/
#*    hello                                                            */
#*---------------------------------------------------------------------*/
hello: hello2.o
	@ $(BIGLOO) $(BFLAGS) hello2.o -o hello2 -lX11

hello2.o: hello2.scm
	@ $(BIGLOO) -c $(BFLAGS) hello2.scm

#*---------------------------------------------------------------------*/
#*    Clean                                                            */
#*---------------------------------------------------------------------*/
clean: 
	@- $(RM) -f *.o *.c hello2 *~ *.BAK *.ast trace
